<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<!-- 
	Available datasources
 -->
<dataSources
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
 	 <dataSource name="CorpusDS" 
 	 	class="com.warcgenerator.datasources.CorpusDS" >
 		<customParams>
 			<urlTag type="java.lang.String">WARC-Target-URI</urlTag>
 			<spamDir type="java.lang.String">_spam_</spamDir>
 			<hamDir type="java.lang.String">_ham_</hamDir>
 		</customParams>
 		<handler>com.warcgenerator.datasources.handler.CorpusDSHandler</handler>
 	</dataSource>
 	<dataSource name="WarcDS" 
 	 	class="com.warcgenerator.core.datasource.WarcDS" >
 		<customParams>
 			<urlTag type="java.lang.String">WARC-Target-URI</urlTag>
 		</customParams>
 		<handler>com.warcgenerator.core.datasource.handler.WarcDSHandler</handler>
 	</dataSource>
 	<dataSource name="ArffDS"
 		class="com.warcgenerator.datasources.ArffDS" >
 		<customParams>
 			<spamTag type="java.lang.String">LABEL</spamTag>
 			<urlTag type="java.lang.String">URL</urlTag>
 		</customParams>
 		<handler>com.warcgenerator.datasources.handler.ArffDSHandler</handler>
 	</dataSource>
 	<dataSource name="FileDS" 
 		class="com.warcgenerator.datasources.FileDS">
 		<handler>com.warcgenerator.datasources.handler.FileDSHandler</handler>
 	</dataSource>
 	<dataSource name="CSVDS" 
 		class="com.warcgenerator.datasources.CSVDS">
 		<customParams>
 		    <fieldSeparator type="java.lang.String">;</fieldSeparator>
 		    <!-- Use the urlColNum to get de url col -->
 			<urlCol type="java.lang.String">0</urlCol>
 			<spamCol type="java.lang.String">LABEL</spamCol>
 			<spamColSpamValue type="java.lang.String">spam</spamColSpamValue>
 		</customParams>
 		<handler>com.warcgenerator.datasources.handler.CSVDSHandler</handler>
 	</dataSource>
 </dataSources>